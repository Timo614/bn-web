# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*.html]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = spaces
index_size = 2
max_line_length = 100

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
max_line_length = 100


